{
    "compilerOptions": {
        "lib": ["es2019"],
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2019",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": "."
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*",
        "sdk/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}