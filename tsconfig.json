{
    "compilerOptions": {
        "lib": ["es2019"],
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2019",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "types": ["node", "form-data"]
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*",
        "sdk/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}